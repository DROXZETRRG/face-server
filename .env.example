# Database Configuration
DATABASE_URL=postgresql://faceserver:faceserver123@localhost:5432/faceserver
DB_HOST=localhost
DB_PORT=5432
DB_USER=faceserver
DB_PASSWORD=faceserver123
DB_NAME=faceserver

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local  # local, oss, or s3
LOCAL_STORAGE_PATH=./storage

# 阿里云 OSS 配置 (当 STORAGE_TYPE=oss 时需要)
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET_NAME=face-server-bucket
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_DOMAIN=  # 可选: 自定义域名，留空则使用默认域名

# S3 兼容存储配置 (当 STORAGE_TYPE=s3 时需要)
CLOUD_STORAGE_BUCKET=face-server-bucket
CLOUD_STORAGE_ENDPOINT=https://s3.amazonaws.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Face Recognition Engine Configuration (InsightFace)
# 模型包: buffalo_l (推荐,高精度), buffalo_s (快速), antelopev2
FACE_MODEL_PACK=buffalo_l

# 检测图像尺寸 (width, height) - 越大越精确但越慢
FACE_DET_SIZE=(640, 640)

# 检测置信度阈值 (0.0-1.0) - 越高越严格
FACE_DET_THRESH=0.5

# 设备类型: cpu 或 cuda
FACE_DEVICE=cpu

# GPU ID: -1 for CPU, 0+ for GPU device ID (仅当使用CUDA时有效)
FACE_CTX_ID=-1

# 模型存储目录 (默认: ~/.insightface)
FACE_MODEL_DIR=~/.insightface
